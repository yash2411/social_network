<%= javascript_include_tag 'login_signup', 'data-turbolinks-track' => true %>
<div>
    <h1 class="text-center mt-2">New password will be sent to your email</h1>
    <div class="form-container">
        <%= form_with( url: reset_password_path, method: :post, remote: true) do |f| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div class="fields email-block">
            <%= f.label :email, "Your email: " %>
            <%= f.email_field :email, class: "input-fields" %>
        </div>

        <div class="form-submit">
            <%= f.submit "Submit", class: "submit", id: "account-btn" %>
        </div>

        <% end %>
    </div>
</div>