<%= javascript_include_tag 'login_signup', 'data-turbolinks-track' => true %>
<div>
    <h1 class="text-center mt-2">Update your profile</h1>
    <div class="form-container">
        <%= form_with(model: @user, url: update_user_profile_path(@user), method: :put, remote: true) do |f| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :id, @user.id %>
        <div class="fields first-name-block">
            <%= f.label :first_name, "First name: " %>
            <%= f.text_field :first_name, value: @user&.first_name, class: "input-fields" %>
        </div>

        <div class="fields last-name-block">
            <%= f.label :last_name, "Last name: " %>
            <%= f.text_field :last_name, value: @user&.last_name, class: "input-fields" %>
        </div>

        <div class="fields email-block">
            <%= f.label :email, "Your email: " %>
            <%= f.email_field :email, value: @user&.email, class: "input-fields", disabled: true %>
        </div>

        <div class="fields password-block">
            <%= f.label :password, "Password: " %>
            <%= f.password_field :password, class: "input-fields" %>
        </div>

        <div class="fields confirm-block">
            <%= f.label :password_confirmation, "Re-enter Password: " %>
            <%= f.password_field :password_confirmation, class: "input-fields" %>
        </div>

        <div class="fields mobile-block">
            <%= f.label :phone_number, "Mobile number: " %>
            <%= f.telephone_field :phone_number, value: @user&.phone_number, class: "input-fields" %>
        </div>

        <div class="fields city-block">
            <%= f.label :city, "City: " %>
            <%= f.text_field :city, value: @user&.city, class: "input-fields" %>
        </div>

        <div class="fields">
            <%= f.label :avatar, "Profile Image " %>
            <%= f.file_field :avatar %>
        </div>

        <div class="form-submit">
            <%= f.submit "Update profile", class: "submit", id: "account-btn" %>
        </div>

        <% end %>
    </div>
</div>