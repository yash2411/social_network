<div class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-2">
    <a class="navbar-brand" href="#">My Site</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link active" %>
        </li>

        <% if !current_user %>
          <li class="nav-item active">
            <%= link_to "Signup", signup_path, class: "nav-link active" %>
          </li>

          <li class="nav-item active">
            <%= link_to "Login", login_path, class: "nav-link active" %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= button_to "Logout", logout_path({id: current_user.id}), method: :delete, data: {turbo: false}, class: "btn btn-link nav-link active" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>